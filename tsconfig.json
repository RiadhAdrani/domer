{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": "./src",
    "useDefineForClassFields": true,
    "module": "Node16",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node16",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "pretty": true,
    "types": []
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
